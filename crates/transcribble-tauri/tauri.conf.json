{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Transcribble",
  "version": "0.1.0",
  "identifier": "app.transcribble",
  "build": {
    "frontendDist": "../../ui/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "cd ../ui && npm run dev",
    "beforeBuildCommand": "cd ../ui && npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Transcribble",
        "width": 900,
        "height": 1000,
        "minWidth": 600,
        "minHeight": 500,
        "center": true,
        "resizable": true,
        "decorations": true,
        "transparent": false,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.png"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15",
      "entitlements": "./Entitlements.plist",
      "signingIdentity": "Developer ID Application: Tanner Christensen (MLDWDJSY4Z)",
      "dmg": {
        "appPosition": { "x": 180, "y": 170 },
        "applicationFolderPosition": { "x": 480, "y": 170 },
        "windowSize": { "width": 660, "height": 400 }
      }
    }
  }
}
